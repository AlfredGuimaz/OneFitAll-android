<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Main View Were content Goes -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="675dp"
        android:layout_marginBottom="25dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Start of Cards -->

            <TextView
                android:id="@+id/tv_stepHeaderTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textAlignment="center"
                android:textSize="30dp"
                />

            <!-- Card for Step Counting-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_stepCounter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="5dp"
                app:contentPadding="20dp"
                android:clickable="false"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_stepHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:textAlignment="center"
                            android:layout_marginLeft="50dp"
                            android:textSize="30dp"
                            android:onClick="resetStepCounter"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" steps taken"
                            android:textAlignment="center"
                            android:layout_marginLeft="5dp"
                            android:textSize="30dp"
                            />

                    </LinearLayout>


                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="350dp"
                        android:layout_height="15sp" />


                    <TextView
                        android:id="@+id/tv_bottomStepCounter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" 500/1000 steps"
                        android:textAlignment="textEnd" />

<!--                    more Info drop down-->
                    <LinearLayout
                        android:id="@+id/ll_dropdownInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Set New Goal"/>

                            <EditText
                                android:id="@+id/et_newGoal"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:layout_marginLeft="10dp"
                                android:inputType="number" />

                            <Button
                                android:id="@+id/bt_newGoal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="NEW GOAL"
                                android:onClick="setGoal"/>


                        </LinearLayout>



                    </LinearLayout>

                    <Button
                        android:id="@+id/bt_dropdownTitel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="SHOW MORE"
                        android:onClick="stepCounterInfo"
                        />



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Spotify card-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="5dp"
                app:contentPadding="20dp">
                <!--                -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:id="@+id/spinner"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        />

                    <!-- Add to underneath button
                            android:onClick="pauseOrResumeSong"
                                  -->
                    <Button
                        android:id="@+id/button4"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"

                            android:text="Pause" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Add to underneath button
                            android:onClick="previousSong"
                                  -->
                        <Button
                            android:id="@+id/button5"
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:text="Previous" />


                        <!-- Add to underneath button
                            android:onClick="play"
                                  -->
                        <Button
                            android:id="@+id/button7"
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:text="Play" />
                        <!-- Add to underneath button
                            android:onClick="skipSong"
                                  -->
                        <Button
                            android:id="@+id/button3"
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:text="Next" />
                    </LinearLayout>

                    <!-- Add to underneath button
                    android:onClick="logout"
                                  -->
                    <Button
                        android:id="@+id/buttonLogout"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:text="Log Out of Spotify" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        <!--End of the cards        -->
        </LinearLayout>
    </ScrollView>
    
    <!--Bottom App bar -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="visible"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:fabCradleMargin="15dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="5dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:visibility="visible"
            app:elevation="0dp"
            app:menu="@menu/bottom_nav_menu" />

    </com.google.android.material.bottomappbar.BottomAppBar>
    <!--Flouting Add Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_smiley"
        android:scaleType="center"
        app:fabSize="normal"
        app:maxImageSize="40dp"
        app:layout_anchor="@id/bottomAppBar" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>