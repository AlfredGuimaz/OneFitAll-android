<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".goViewWorkout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Workouts"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscle Group"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="225dp"
            android:layout_height="30dp"
            android:hint="Chest"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="#80999999"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Exercise"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="225dp"
            android:layout_height="30dp"
            android:hint="Bench Press"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="#80999999"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sets"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/sets"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="50dp"
                android:hint="sets"
                android:inputType="number"
                android:background="#80999999"
                android:gravity="center"/>



            <TextView
                android:id="@+id/reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reps"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:layout_toRightOf="@+id/sets"
                android:layout_gravity="center"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/reps"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/sets"
                android:layout_marginLeft="80dp"
                android:hint="reps"
                android:inputType="number"
                android:background="#80999999"
                android:gravity="center"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:hint="ex. kg"
            android:inputType="number"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="#80999999"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/saveWorkoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Save"
                android:layout_marginLeft="70dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/restWorkoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Reset"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/saveWorkoutBtn"
                android:layout_gravity="center"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>